{
  "name": "ai-stock-dashboard",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": [
    "*.css",
    "src/lib/polyfills.js"
  ],
  "scripts": {
    "dev": "./start-dev.sh http-server",
    "serve": "./start-dev.sh serve",
    "start": "npm run dev",
    "python-server": "./start-dev.sh python",
    "dev:force": "./start-dev.sh http-server --force",
    "dev:simple": "npx http-server -p 8080 -c-1 --cors",
    "serve:simple": "npx serve -s . -p 8080",
    "test": "jest --config=jest.config.cjs",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/frontend/unit",
    "test:integration": "jest tests/frontend/integration",
    "test:e2e": "playwright test",
    "test:visual": "jest tests/frontend/visual",
    "test:a11y": "jest tests/frontend/accessibility",
    "test:performance": "jest tests/frontend/performance",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "description": "AI Stock Prediction Dashboard with Modern Architecture",
  "keywords": [
    "ai",
    "stock",
    "dashboard",
    "prediction",
    "finance"
  ],
  "author": "Dashboard Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.8",
    "axe-core": "^4.8.0",
    "babel-jest": "^30.0.5",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-canvas-mock": "^2.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.0.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0"
  }
}
