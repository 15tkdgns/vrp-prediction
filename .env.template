# AI Stock Prediction System - Environment Configuration Template

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8091
API_TIMEOUT=10000
CACHE_TIMEOUT=300

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DATABASE_URL=sqlite:///data/stock_data.db
DB_POOL_SIZE=10

# =============================================================================
# EXTERNAL API KEYS (Required for production)
# =============================================================================

# Alpha Vantage API (Stock data)
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Financial Modeling Prep API
FMP_KEY=your_fmp_key_here

# Twelve Data API
TWELVE_DATA_KEY=your_twelve_data_key_here

# Polygon.io API
POLYGON_KEY=your_polygon_key_here

# IEX Cloud API
IEX_CLOUD_KEY=your_iex_cloud_key_here

# Marketaux News API
MARKETAUX_KEY=your_marketaux_key_here

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================
MODEL_UPDATE_INTERVAL=3600
ML_BATCH_SIZE=32
GPU_ENABLED=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_NOTIFICATIONS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
LOG_FILE_PATH=logs/app.log
METRICS_ENABLED=true